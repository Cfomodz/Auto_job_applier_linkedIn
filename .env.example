# LinkedIn Auto Job Applier - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# LINKEDIN CREDENTIALS (Optional)
# ============================================
# Leave empty to login manually or use saved browser profile
LINKEDIN_USERNAME=
LINKEDIN_PASSWORD=

# ============================================
# PERSONAL INFORMATION
# ============================================
FIRST_NAME=
MIDDLE_NAME=
LAST_NAME=
PHONE_NUMBER=
CURRENT_CITY=
STREET_ADDRESS=
STATE=
ZIPCODE=
COUNTRY=United States

# ============================================
# EQUAL OPPORTUNITY / DEMOGRAPHICS
# ============================================
# Options: Decline, Hispanic/Latino, American Indian or Alaska Native, Asian, 
#          Black or African American, Native Hawaiian or Other Pacific Islander, White, Other
ETHNICITY=Decline

# Options: Male, Female, Other, Decline
GENDER=Decline

# Options: Yes, No, Decline
DISABILITY_STATUS=Decline
VETERAN_STATUS=Decline

# ============================================
# PROFESSIONAL INFORMATION
# ============================================
YEARS_OF_EXPERIENCE=0
CURRENT_EXPERIENCE=0
REQUIRE_VISA=No
WEBSITE=
LINKEDIN_PROFILE=
US_CITIZENSHIP=U.S. Citizen/Permanent Resident
RECENT_EMPLOYER=
CONFIDENCE_LEVEL=7

# ============================================
# SALARY & COMPENSATION
# ============================================
DESIRED_SALARY=100000
CURRENT_CTC=80000
NOTICE_PERIOD_DAYS=14

# ============================================
# AI CONFIGURATION (Optional)
# ============================================
USE_AI=false
AI_PROVIDER=openai
LLM_API_URL=https://api.openai.com/v1/
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_SPEC=openai
STREAM_OUTPUT=false

